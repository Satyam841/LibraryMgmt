@model IEnumerable<LibraryManagementSystem.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student</h2>

<p>
    @* @Html.ActionLink("Create New", "Create")*@
</p>
<a href="/Books/Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign">Add</i></a>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department.Tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session.SessionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rollno)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Tittle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Session.SessionTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rollno)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

@model IEnumerable<LibraryManagementSystem.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book</h2>

<p>
    @* @Html.ActionLink("Create New", "Create")*@
</p>
<a href="/Books/Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign">Add</i></a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Semester.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pulisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pulisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    @*  <a href="/Books/Edit/@Model.Id" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign">Add</i></a>
                        <a href="/Books/Details/@Model.Id" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign">Add</i></a>
                        <a href="/Books/Delete/@Model.Id" class="btn btn-primary"><i class="glyphicon glyphicon-plus-sign">Add</i></a>*@

                </td>
            </tr>
        }
    </tbody>


</table>
